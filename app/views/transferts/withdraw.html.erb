<!-- app/views/transactions/withdraw.html.erb -->
<div class="container py-4">
  <div class="row">
    <div class="col-12">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><%= link_to "Accueil", root_path %></li>
          <li class="breadcrumb-item"><%= link_to "Vérifier Numéro", check_number_transactions_path %></li>
          <li class="breadcrumb-item active">Retrait</li>
        </ol>
      </nav>
    </div>
  </div>

  <div class="row mb-4">
    <div class="col-12">
      <h1 class="h2">Effectuer un Retrait</h1>
      <p class="text-muted">Retrait pour le numéro : <strong><%= @phone_number %></strong></p>
    </div>
  </div>

  <!-- Informations du solde -->
  <div class="row mb-4">
    <div class="col-md-4">
      <div class="card border-success">
        <div class="card-body text-center">
          <h5 class="text-success">Solde Disponible</h5>
          <h3 class="<%= @balance > 0 ? 'text-success' : 'text-danger' %>">
            <%= number_to_currency(@balance, unit: '', precision: 0) %> FCFA
          </h3>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-info">
        <div class="card-body text-center">
          <h5 class="text-info">Total Reçu</h5>
          <h4><%= number_to_currency(@total_available, unit: '', precision: 0) %> FCFA</h4>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card border-warning">
        <div class="card-body text-center">
          <h5 class="text-warning">Déjà Retiré</h5>
          <h4><%= number_to_currency(@total_withdrawn, unit: '', precision: 0) %> FCFA</h4>
        </div>
      </div>
    </div>
  </div>

  <% if @balance > 0 %>
    <!-- Formulaire de retrait -->
    <div class="row mb-4">
      <div class="col-md-8">
        <div class="card">
          <div class="card-header">
            <h5 class="mb-0">Formulaire de Retrait</h5>
          </div>
          <div class="card-body">
            <%= form_with url: process_withdrawal_transactions_path, method: :post, local: true do |f| %>
              <%= f.hidden_field :phone_number, value: @phone_number %>
              
              <div class="mb-3">
                <%= f.label :recipient_name, "Nom du Bénéficiaire", class: "form-label" %>
                <%= f.text_field :recipient_name, class: "form-control", 
                                 placeholder: "Nom de la personne qui retire",
                                 required: true %>
                <div class="form-text">Le nom de la personne qui effectue le retrait</div>
              </div>

              <div class="mb-3">
                <%= f.label :amount, "Montant à Retirer", class: "form-label" %>
                <div class="input-group">
                  <%= f.number_field :amount, class: "form-control", 
                                     step: 0.01, min: 1, max: @balance,
                                     placeholder: "0",
                                     required: true %>
                  <span class="input-group-text">FCFA</span>
                </div>
                <div class="form-text">
                  Maximum disponible: <strong><%= number_to_currency(@balance, unit: '', precision: 0) %> FCFA</strong>
                </div>
              </div>

              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <%= link_to "Annuler", check_number_transactions_path(phone_number: @phone_number), 
                            class: "btn btn-secondary" %>
                <%= f.submit "Effectuer le Retrait", class: "btn btn-warning" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="col-md-4">
        <div class="card">
          <div class="card-header">
            <h6 class="mb-0">Informations</h6>
          </div>
          <div class="card-body">
            <div class="mb-3">
              <small class="text-muted">Numéro bénéficiaire</small>
              <div><strong><%= @phone_number %></strong></div>
            </div>
            <div class="mb-3">
              <small class="text-muted">Transactions disponibles</small>
              <div><strong><%= @available_transactions.count %></strong> envois</div>
            </div>
            <hr>
            <div class="alert alert-info">
              <small>
                <strong>Information:</strong> Le retrait sera enregistré comme une nouvelle transaction dans le système.
              </small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Liste des transactions disponibles -->
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Transactions Disponibles pour Retrait</h5>
      </div>
      <div class="card-body">
        <% if @available_transactions.any? %>
          <div class="table-responsive">
            <table class="table table-sm">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Référence</th>
                  <th>Expéditeur</th>
                  <th>Montant</th>
                  <th>Statut</th>
                </tr>
              </thead>
              <tbody>
                <% @available_transactions.each do |transaction| %>
                  <tr>
                    <td><%= transaction.created_at.strftime("%d/%m/%Y") %></td>
                    <td><code><%= transaction.reference %></code></td>
                    <td>
                      <strong><%= transaction.sender_name %></strong><br>
                      <small class="text-muted"><%= transaction.sender_number %></small>
                    </td>
                    <td><strong class="text-success"><%= transaction.formatted_amount %></strong></td>
                    <td><span class="badge bg-success">Disponible</span></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-4">
            <p class="text-muted">Aucune transaction disponible pour retrait</p>
          </div>
        <% end %>
      </div>
    </div>

  <% else %>
    <!-- Aucun solde disponible -->
    <div class="card">
      <div class="card-body text-center py-5">
        <div class="mb-3">
          <i class="fas fa-exclamation-triangle fa-3x text-warning"></i>
        </div>
        <h4>Aucun Solde Disponible</h4>
        <p class="text-muted">
          Ce numéro n'a pas de solde disponible pour effectuer un retrait.
        </p>
        <div class="mt-4">
          <%= link_to "Vérifier un Autre Numéro", check_number_transactions_path, 
                      class: "btn btn-primary" %>
          <%= link_to "Retour à l'Accueil", root_path, 
                      class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>